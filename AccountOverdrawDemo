package com.company;

import com.sun.jmx.mbeanserver.NamedObject;

class Account
{
    private String name;
    private int balance;
    public Account(String name)
    {
        this.name=name;
        this.balance=1000;
    }
    public int withdraw(int amount)
    {
        if(amount<=balance)
        {
            this.balance=this.balance-amount;
            return amount;
        }
        else return 0;
    }
}
class AccountOverdrawDemo implements Runnable
{
    private static Account account;
    private int amount;
    public void run()
    {
        int a=account.withdraw(amount);
        if(a>0) System.out.println("Ammount Withdraw: "+amount);
        else System.out.println("insufficient Balance");
    }

    public static void main(String[] args)
    {
        account=new Account("Jack");
        AccountOverdrawDemo a= new AccountOverdrawDemo();
        a.amount=600;
        Thread t1=new Thread(a);
        AccountOverdrawDemo a2= new AccountOverdrawDemo();
        a2.amount=600;
        Thread t2=new Thread(a2);
        t1.start();
        t2.start();
    }
}

